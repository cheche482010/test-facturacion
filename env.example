# ========================================
# SISTEMA DE FACTURACIÓN - VARIABLES DE ENTORNO
# ========================================

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================

# Tipo de base de datos (mysql, sqlite)
DB_TYPE=mysql

# Configuración MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=facturacion_db
DB_USER=root
DB_PASSWORD=root

# Configuración SQLite (fallback)
DB_SQLITE_PATH=./database/facturacion.sqlite

# Configuración de conexión
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# ========================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ========================================

# Clave secreta para JWT (cambiar en producción)
JWT_SECRET=tu_clave_secreta_muy_segura_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Configuración de bcrypt
BCRYPT_ROUNDS=12

# ========================================
# CONFIGURACIÓN DEL SERVIDOR
# ========================================

# Puerto del servidor backend
SERVER_PORT=3001

# Entorno (development, production, test)
NODE_ENV=development

# URL base de la aplicación
BASE_URL=http://localhost:3000

# ========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ========================================

# Modo de operación (bodega, tienda)
OPERATION_MODE=tienda

# Configuración de la empresa
COMPANY_NAME=Mi Empresa
COMPANY_RIF=J-12345678-9
COMPANY_ADDRESS=Dirección de la empresa
COMPANY_PHONE=+58-123-456-7890
COMPANY_EMAIL=info@miempresa.com

# Configuración de facturación
INVOICE_PREFIX=FAC
INVOICE_START_NUMBER=1
INVOICE_SERIES=A

# ========================================
# CONFIGURACIÓN DE TASA DE CAMBIO
# ========================================

# API para tasa de cambio (DolarAPI)
DOLAR_API_URL=https://ve.dolarapi.com/v1/dolares/oficial
DOLAR_API_KEY=

# Tasa de cambio manual (si no se usa API)
MANUAL_EXCHANGE_RATE=35.50

# Frecuencia de actualización de tasa (en minutos)
EXCHANGE_UPDATE_INTERVAL=60

# ========================================
# CONFIGURACIÓN DE IMPRESIÓN
# ========================================

# Impresora por defecto
DEFAULT_PRINTER=

# Configuración de ticket
TICKET_WIDTH=80
TICKET_FONT_SIZE=12
TICKET_HEADER=Mi Empresa
TICKET_FOOTER=Gracias por su compra

# ========================================
# CONFIGURACIÓN DE BACKUP
# ========================================

# Directorio de backups
BACKUP_DIR=./backups

# Frecuencia de backup automático (en horas)
AUTO_BACKUP_INTERVAL=24

# Retener backups por días
BACKUP_RETENTION_DAYS=30

# Configuración de backup en la nube
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REFRESH_TOKEN=

DROPBOX_ACCESS_TOKEN=

# ========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ========================================

# Habilitar notificaciones
ENABLE_NOTIFICATIONS=true

# Configuración de email (opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================

# Tiempo de sesión inactiva (en minutos)
SESSION_TIMEOUT=30

# Intentos máximos de login
MAX_LOGIN_ATTEMPTS=5

# Bloqueo de cuenta (en minutos)
ACCOUNT_LOCKOUT_DURATION=15

# ========================================
# CONFIGURACIÓN DE LOGS
# ========================================

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Directorio de logs
LOG_DIR=./logs

# Rotación de logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================

# Habilitar modo debug
DEBUG=false

# Habilitar CORS en desarrollo
CORS_ORIGIN=http://localhost:3000

# ========================================
# CONFIGURACIÓN DE ELECTRON
# ========================================

# Puerto del servidor de desarrollo
DEV_SERVER_PORT=3000

# Configuración de la ventana
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
WINDOW_MIN_WIDTH=800
WINDOW_MIN_HEIGHT=600

# ========================================
# CONFIGURACIÓN DE HARDWARE
# ========================================

# Puerto del lector de código de barras
BARCODE_READER_PORT=COM3

# Configuración de impresora fiscal (si aplica)
FISCAL_PRINTER_MODEL=
FISCAL_PRINTER_PORT=

# ========================================
# CONFIGURACIÓN DE REPORTES
# ========================================

# Directorio de reportes temporales
REPORTS_TEMP_DIR=./temp/reports

# Formato de exportación por defecto
DEFAULT_EXPORT_FORMAT=pdf

# ========================================
# CONFIGURACIÓN DE CACHE
# ========================================

# Habilitar cache
ENABLE_CACHE=true

# Tiempo de vida del cache (en segundos)
CACHE_TTL=300

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================

# Habilitar monitoreo de rendimiento
ENABLE_PERFORMANCE_MONITORING=false

# Umbral de alerta de memoria (MB)
MEMORY_ALERT_THRESHOLD=512

# ========================================
# INSTRUCCIONES DE USO
# ========================================

# 1. Copia este archivo como .env
# 2. Completa las variables según tu configuración
# 3. En producción, cambia JWT_SECRET por una clave segura
# 4. Configura las credenciales de base de datos
# 5. Ajusta la configuración de la empresa
# 6. Configura las APIs externas si las usas

# ========================================
# VARIABLES OPCIONALES
# ========================================

# Configuración de proxy (si es necesario)
HTTP_PROXY=
HTTPS_PROXY=

# Configuración de timezone
TZ=America/Caracas

# Configuración de idioma
LANG=es-VE
