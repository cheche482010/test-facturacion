{
  "name": "sistema-facturacion",
  "version": "1.0.0",
  "description": "Sistema de Facturación con Electron.js + MySQL",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vue\" \"npm run dev:electron\"",
    "dev:vue": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:vue && electron-builder",
    "build:vue": "vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview",
    "db:migrate": "node src/main/database/migrate.js",
    "db:setup": "node src/main/database/setup.js",
    "db:seed": "node src/main/database/seeders/defaultData.js",
    "db:reset": "node src/main/database/reset.js",
    "db:create": "node src/main/database/create.js",
    "db:verify": "node src/main/database/verify.js"
  },
  "build": {
    "appId": "com.facturacion.app",
    "productName": "Sistema de Facturación",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.0",
    "cross-env": "^10.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "8.5.6",
    "sass": "^1.69.5",
    "tailwindcss": "^4.1.9",
    "typescript": "5.9.2",
    "vite": "^4.4.11"
  },
  "dependencies": {
    "@mdi/font": "^7.3.67",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "path": "0.12.7",
    "pinia": "^2.1.7",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "vuetify": "^3.4.4",
    "wait-on": "^7.2.0"
  }
}
