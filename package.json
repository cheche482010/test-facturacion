{
  "name": "sistema-facturacion",
  "version": "1.0.0",
  "description": "Sistema de Facturación con Electron.js + MySQL",
  "main": "electron/main.js",
  "scripts": {
    "setup": "node setup.js",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "wait-on tcp:3000 && electron electron/main.js",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "dist": "npm run build",
    "test": "jest",
    "lint": "eslint src --ext .js,.vue",
    "lint:fix": "eslint src --ext .js,.vue --fix"
  },
  "keywords": [
    "electron",
    "vue",
    "facturacion",
    "inventario",
    "mysql",
    "desktop"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.0",
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.51.0",
    "eslint-plugin-vue": "^9.17.0",
    "sass": "^1.69.5",
    "vite": "^4.4.9",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@mdi/font": "^7.3.67",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "pinia": "^2.1.7",
    "sequelize": "^6.35.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5",
    "vuetify": "^3.4.0"
  },
  "build": {
    "appId": "com.tuempresa.sistema-facturacion",
    "productName": "Sistema de Facturación",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "src/preload.js",
      "src/backend/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
